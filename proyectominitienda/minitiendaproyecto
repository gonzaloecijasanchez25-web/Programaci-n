articulos = []
ultimo_id = 0
id_nuevo = 0
def generar_id(articulos):
    return len(articulos) + 1



def crear_articulo(articulos):
    nombre = str(input("Introduzca el nombre del articulo que quieras añadir: "))
    precio = float(input(f"Introduce el precio de {nombre}: "))
    while precio <= 0:
        print("El precio debe ser superior a 0")
        precio = float(input("Introduzca de nuevo el precio: "))
    stock = int(input(f"Introduce el stock del {nombre}: "))
    while stock <= 0:
        print("El precio debe ser superior a 0")
        stock = int(input("Introduzca de nuevo el stock: "))
    if precio <= 0 or stock < 0:
        print("Error: Precio o stock fuera de rango.")
    
    producto = {
        "id" : generar_id(articulos),
        "nombre" : nombre,
        "precio" : precio,
        "stock" : stock,
        "activo" : true,
    }

    articulos.append(producto)
    print("Producto creado con exito")

def listar_articulos(articulos):
    for i in articulos:
        print(f'ID:{i["id"]} | {i["nombre"]} | Precio:{i["precio"]} € | Stock:{i["stock"]} | Estado:{i["estado"]}')